{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "dynamicImport": true,
      "decorators": true
    },
		"target": "es2022",
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
		"experimental": {
			"keepImportAssertions": true
		},
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
  },
  "minify": false
}
